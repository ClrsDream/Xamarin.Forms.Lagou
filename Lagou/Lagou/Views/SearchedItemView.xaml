<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lagou.Views.SearchedItemView">

  <Frame Padding="2">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>

      <Image Source="{Binding Data.CompanyLogoUri}"
             WidthRequest="80" HeightRequest="80" Aspect="AspectFill"
             Grid.RowSpan="3" Grid.Column="0" Grid.Row="0"
             />

      <Label Text="{Binding Data.CompanyName}" Grid.Row="0" Grid.Column="1" />
      <Label Text="{Binding Data.PositionName}" Grid.Row="1" Grid.Column="1" />
      <Label Text="{Binding Data.CreateTime}" Grid.Row="2" Grid.Column="1" />

      <StackLayout Grid.Row="0" Grid.Column="2" Grid.RowSpan="3">
        <Label Text="{Binding Data.Salary}" />
        <Label Text="{Binding Data.City}" />
      </StackLayout>
    </Grid>
  </Frame>


</ContentView>