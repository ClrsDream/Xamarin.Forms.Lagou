<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lagou.Views.MyView"
             xmlns:local="clr-namespace:Lagou;assembly=Lagou"
             local:AttachedFontIcon.Glyph="&#xf0f0;"
             local:AttachedFontIcon.FontFamily="Fonts/FontAwesome.otf"
             local:AttachedFontIcon.Color="Green"
             local:AttachedFontIcon.FontSize="20"                
             >

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Button Text="登陆" Command="{Binding LoginCmd}" />
    <Button Text="我的简历" Command="{Binding ViewResumeCmd}" Grid.Row="1" />
  </Grid>
  
</ContentPage>