    <DataTemplate x:Key="CellTemplate">
        <StackPanel>
            <xm:CellControl Cell="{Binding}" HorizontalContentAlignment="Stretch" />
            <Rectangle Fill="#cc999999" Height="0.5" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>